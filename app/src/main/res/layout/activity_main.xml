<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="14dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:fontFamily="@font/ys_display_medium_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="28dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_layout_height"
            android:layout_weight="@dimen/main_layout_weight"
            android:textSize="@dimen/main_text_size"
            app:cornerRadius="@dimen/main_cornerRadius"
            app:iconPadding="@dimen/main_iconPadding"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:text="@string/search"
            android:textColor="@color/black"
            app:icon="@drawable/icon_search"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:id="@+id/search_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_layout_height"
            android:layout_weight="@dimen/main_layout_weight"
            android:textSize="@dimen/main_text_size"
            app:cornerRadius="@dimen/main_cornerRadius"
            app:iconPadding="@dimen/main_iconPadding"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:text="@string/library"
            android:textColor="@color/black"
            app:icon="@drawable/media"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:id="@+id/media_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_layout_height"
            android:layout_weight="@dimen/main_layout_weight"
            android:textSize="@dimen/main_text_size"
            app:cornerRadius="@dimen/main_cornerRadius"
            app:iconPadding="@dimen/main_iconPadding"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:text="@string/settings"
            android:textColor="@color/black"
            app:icon="@drawable/option"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            android:id="@+id/settings_button"/>

    </LinearLayout>

</LinearLayout>
